#tag Events btnCopyFullRTF
	#tag Event
		Sub Action()
		  dim s as string = TextArea1.getRTF
		  
		  dim c as new Clipboard
		  c.Text = TextArea1.text
		  c.AddRawData(s, TextArea1.RTF_DATA_TYPE)
		  c.close
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events cvsColor
	#tag Event
		Function MouseDown(X As Integer, Y As Integer) As Boolean
		  #pragma unused x
		  #pragma unused y
		  
		  Dim c As Color = textarea1.SelTextColor
		  
		  if SelectColor(c, "Select Text Color") then
		    
		    textarea1.SelTextColor = c
		    
		  end
		End Function
	#tag EndEvent
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  #pragma unused Areas
		  
		  g.ForeColor = &c000000
		  g.DrawRect 0, 0, g.width, g.Height
		  
		  g.ForeColor = &c7F7F7F00
		  g.drawrect 1, 1, g.width, g.Height
		  
		  g.ForeColor = textArea1.SelTextColor
		  g.FillRect 1, 1, g.Width - 2, g.Height - 2
		End Sub
	#tag EndEvent

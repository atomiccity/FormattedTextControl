#tag Events TextArea1
	#tag Event
		Sub SelChange()
		  bFreeze = true
		  
		  if chkBold.value <> me.selBold then
		    chkBold.value = me.selBold
		  end
		  
		  if chkItalic.value <> me.selItalic then
		    chkItalic.value = me.selItalic
		  end
		  
		  if chkUnderline.value <> me.selUnderline then
		    chkUnderline.value = me.selUnderline
		  end
		  
		  if me.selTextFont <> "" and pmFonts.text <> me.selTextFont then
		    for i as integer = 0 to pmFonts.ListCount-1
		      if pmFonts.list(i) = me.selTextFont then
		        pmFonts.listIndex = i
		        exit
		      end
		    next
		  end
		  
		  if me.selTextSize > -1 and txtSize.text.val <> me.selTextSize then
		    txtSize.text = str(me.selTextSize)
		  end
		  
		  rbLeft.value = me.Alignment < 2
		  rbCenter.value = me.Alignment =2
		  rbRight.value = me.Alignment =3
		  
		  cvsColor.Refresh false
		  
		  bFreeze = false
		End Sub
	#tag EndEvent
	#tag Event
		Sub TextChange()
		  
		End Sub
	#tag EndEvent
#tag EndEvents
